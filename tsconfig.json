{
    "compilerOptions": {
        "target": "esNext",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "pretty": true,
        "sourceMap": true,
        "outDir": "./build",
        "allowJs": true,
        "noEmit": false,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
